<h2><%= t('.header', title: @test.title) %></h2>
<p><b><%= t('.level') %></b> <%= @test.level%></p>
<p><b><%= t('.author') %></b> <%= @test.author.email%></p>

<%= link_to t('.question_create'), new_admin_test_question_path(@test) %>
<h3><%= t('.all_questions') %></h3>

<table class="table">
  <tr>
    <th><%= t('.body') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>

</table>

<%= link_to t('.edit'), edit_admin_test_path(@test) %>
<%= link_to t('.back'), admin_tests_path %>
